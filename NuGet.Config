<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!-- Yalnızca nuget.org'u kullan -->
  <packageSources>
    <clear />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
  </packageSources>

  <!-- Windows ortamından taşınmış fallback klasörlerini TEMİZLE -->
  <fallbackPackageFolders>
    <clear />
  </fallbackPackageFolders>

  <!-- Global packages klasörünü açıkça tanımla (Linux uyumlu) -->
  <config>
    <add key="globalPackagesFolder" value="/root/.nuget/packages" />
  </config>
</configuration>
